@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
}
@{
    foreach (Category category in Model)
    {
        <article class="col-12 col-md-6 tm-post">
            <hr class="tm-hr-primary">
            <a asp-action="PostsByCategory" asp-controller="Category" asp-area="" asp-route-id="@category.ID" class="effect-lily tm-post-link tm-pt-60">
                <div class="tm-post-link-inner">
                    <img src="~/FrontTemplate/img/img-01.jpg" alt="Image" class="img-fluid">
                </div>
                @if(category.CreatedDate.Value.AddDays(5) >= DateTime.Now)
                {
                    <span class="position-absolute tm-new-badge"></span>
                }
                <span class="position-absolute tm-new-badge">YENİ</span>
                <h2 class="tm-pt-30 tm-color-primary tm-post-title">@category.CategoryName</h2>
            </a>
            <p class="tm-pt-15">
                @category.Description
            </p>
            <div class="d-flex justify-content-between tm-pt-45">
                <span class="tm-color-primary">Bu kategoride @category.Posts.Count adet post bulunuyor</span>
            </div>
            <hr>
            <div class="d-flex justify-content-between">
                <span></span>
                <span></span>
            </div>
        </article>
    }
}