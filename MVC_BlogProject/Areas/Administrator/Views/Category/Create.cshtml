@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-12">
    <form asp-controller="Category" asp-action="Create" asp-area="Administrator" method="post">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Yeni Kategori Ekle</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="CategoryName">Kategori Adı</label>
                    <input type="text" class="form-control input-square" placeholder="Kategori Adı Giriniz...">
                </div>
                <div class="form-group">
                    <label asp-for="Description">Kategori Açıklaması</label>
                    <textarea type="text" class="form-control input-square" placeholder="Kategori Açıklaması Giriniz..."></textarea>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Ekle</button>
            </div>
        </div>
    </form>
</div>

